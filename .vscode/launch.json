    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Classification",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            //"cwd": "${workspaceFolder}"
            "cwd": "${fileDirname}",
            "justMyCode": false,
            "args":
            [
                "--batch_size", "16",
                "--lr", "0.01",
                "--epochs", "150",
                "--train_split", "0.8",
                "--stations", "['Buelenberg_1', 'Stillberg_2', 'Sattel_1']", //, 'Sattel_1', 'Stillberg_2']",  //comma separated, single elements in string quotes, station_cam separated with underscore !
                "--weighted", "Auto", //Manual, Auto, False
                "--path_dset", "../datasets/dataset_downsampled/",
                "--lr_scheduler", "7", //either integer or "None"
            ]
        },
        {
            "name": "Launch Segmentation",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            //"cwd": "${workspaceFolder}"
            "cwd": "${fileDirname}",
            "justMyCode": false,
            "args":
            [
                "--batch_size", "8",
                "--lr", "0.01",
                "--epochs", "5",
                "--train_split", "0.8",
                "--stations", "['Buelenberg_1', 'Stillberg_2', 'Sattel_1']",  //comma separated, single elements in string quotes, station_cam separated with underscore !
                "--path_dset", "../datasets/dataset_complete/",
                "--lr_scheduler", "7", //either integer or "None"
            ],
            "env": 
                {
                "PYDEVD_WARN_EVALUATION_TIMEOUT" : "10"
                }
        },
        {
            "name": "Launch any other file",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",
        }
    ]
}
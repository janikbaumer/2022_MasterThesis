    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            //"cwd": "${workspaceFolder}"
            "cwd": "${fileDirname}",
            "args":
            [
                "--batch_size", "8",
                "--lr", "0.01",
                "--epochs", "1",
                "--train_split", "0.8",
                "--stations", "['Buelenberg_1', 'Buelenberg_2']",  //comma separated, single elements in string quotes !
                //"--cam", "1",
                "--weighted", "Manual",
                "--path_dset", "../datasets/dataset_downsampled_devel/"
            ]
        }
    ]
}